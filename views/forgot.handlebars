<!doctype html>
<html lang="en" class="no-js">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="/stylesheets_wjz/bootstrap.min.css"/>
  <link rel="stylesheet" href="/stylesheets/signup.css"/>
  
  <script src="javascripts/modernizr.js"></script> <!-- Modernizr -->
  <title>team_8</title>
</head>

<div class="row">
  <div class="col-lg-12">
    {{#if success_msg}}
    <div class="alert alert-success">{{success_msg}}</div>
    {{/if}}

    {{#if error_msg}}
    <div class="alert alert-danger">{{error_msg}}</div>
    {{/if}}

    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    
    {{{body}}}
  </div>   
</div>


<body>
 <!--NAVBAR SECTION START -->

<nav class="navbar navbar-toggleable-md navbar-inverse fixed-top bg-inverse">

    <div class="dropdown">
        <button class="navbar-toggler navbar-toggler-right dropbtn" type="button" data-toggle="collapse"
                data-target="#navbar-collapse-1" aria-controls="navbarCollapse" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbar-collapse-1" class="dropdown-content">
            <ul class="nav navbar-nav navbar-right">
                {{#if user}}
                    <a class="sampleText">Hi! <strong>{{username}}</strong></a>
                    <a href="/users/profile">Profile</a>
                    <a href="/users/logout">Log Out</a>
                {{else}}
                    <a href="/users/signup">Sign Up</a>
                    <a href="/users/login">Log In</a>
                {{/if}}
            </ul>
        </div>
    </div>

    <a class="navbar-brand" href="/">team_8</a>

    <div class="collapse navbar-collapse" id="navbarCollapse">

        <form class="form-inline mt-2 mt-md-0" action="/" method="post">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" name="coursename"/>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>

        <ul class="navbar-nav ml-auto">
            {{#if user}}
                <a class="nav-link prompt"> Welcome! {{username}} has {{point}} points!</a>
                <li class="nav-item active">
                    <a class="nav-link" href="/users/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/logout">Log Out</a>
                </li>
            {{else}}
                <li class="nav-item active">
                    <a class="nav-link" href="/users/signup">Sign Up</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/users/login">Log In</a>
                </li>
            {{/if}}
        </ul>
    </div>
</nav>

<!-- NAV BAR ENDS -->

    {{#if errors}}
    {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
    {{/if}}

    <div class="cd-user-modal-container"> <!-- this is the container wrapper -->
      <div id="cd-login"> <!-- log in form -->
        <form class="cd-form" method="post" action="/users/forgot">
          <p class="fieldset">
            <label class="image-replace cd-username" for="signup-username">Email</label>
            <input class="full-width has-padding has-border" id="signup-username" type="text" placeholder="Email" name="email">
            <span class="cd-error-message">Username error message</span>
          </p>



          <p class="fieldset">
            <input class="full-width" type="submit" value="Reset Password">
          </p>
        </form>
      </div> <!-- cd-login -->
    </div>

    <div class="footer">
      <a class="company">&copy; 2017 team_8, Inc.</a>
    </div>

  </body>
  </html>
